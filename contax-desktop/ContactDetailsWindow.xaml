<Window
    x:Class="contax_desktop.ContactDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:contax_desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ContactDetailsWindow"
    Width="300"
    Height="300"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5" />
            <TextBlock Text="Email:" />
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5" />
            <TextBlock Text="Phone:" />
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5" />
            <Button
                x:Name="updateButton"
                Margin="0,0,0,5"
                Click="updateButton_Click"
                Content="Update" />
            <Button
                x:Name="deleteButton"
                Background="Red"
                Click="deleteButton_Click"
                Content="Delete"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
