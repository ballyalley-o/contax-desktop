<Window
    x:Class="contax_desktop.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:contax_desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window1"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5" />
            <Button Click="Button_Click" Content="Save Contact" />
        </StackPanel>
    </Grid>
</Window>
